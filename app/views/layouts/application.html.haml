!!!
%html
  %head
    %title Adverts
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .wraper.container
      %nav.navbar.navbar-inverse{:role => "navigation"}
        .container-fluid
          .navbar-header
            %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "http://localhost:3000/"} Adverst
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li.active
                %a{:href => "#"}=t('.main')
              %li
                %a{:href => "#"}=t('.users')
            %button.btn.btn-info.navbar-btn{:type => "button"}=t('.add_advert')
            %form.navbar-form.navbar-left{:role => "search"}
              .form-group
                %input.form-control.input-sm{:placeholder => "Search", :type => "text"}
              %button.btn.btn-sm{:type => "submit"}=t('.sent')
            %ul.nav.navbar-nav.navbar-right
              - unless user_signed_in?
                %li
                  = link_to(t('.enter'), new_user_session_path)
                %li
                  = link_to(t('.registration'),new_user_registration_path)
              -else
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    = current_user.login
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to(t('.profile'), user_profile_path )
                    %li
                      = link_to(t('.edit'), edit_user_registration_path )
                    %li
                      %a{:href => "#"}=t('.something_else')
                    %li.divider
                    %li
                      = link_to(t('.go_out'), destroy_user_session_path, :method => :delete)
      .flash
        - flash.each do |name, msg|
          = content_tag :div, msg, class: name
      = yield
      %p=params[:current_user]
    %footer.footer.container.fixed-bottom
      %p.text-center Footer