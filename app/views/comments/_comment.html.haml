.comment.clearfix{ id: "comment_id_#{comment.id}" }
  %p.comment-author.pull-left
    = comment.user.login
    %span :
    - if can? :destroy, comment
      = link_to('', comment, class: 'delete-comment pull-right', method: :delete, remote: true)
    - if can? :update, comment
      = link_to('', edit_comment_path(comment), class: 'edit-comment pull-right', remote: true)
  %p.comment-text= comment.text

