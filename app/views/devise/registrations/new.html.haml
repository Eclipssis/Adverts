%section.middle.container
  = render partial: "devise/shared/breadcrumb", locals: {breadcrumb:  { "http://localhost:3000/" => "Главная", "http://localhost:3000/users/sign_up" => "Регистрация" }}
  .registration.col-lg-8.col-md-6.col-sm-8.col-xs-12.col-lg-offset-2.col-md-offset-3.col-sm-offset-2
    = form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "form-horizontal",role: 'form'}) do |f|
      = devise_error_messages!
      .form-group
        = f.label t("user.login"), class: 'col-sm-2 control-label', for: 'login'
        .col-sm-10
          = f.text_field :login, autocomplete: "off",class: 'form-control', id: 'login', type: 'text' , placeholder: 'Логин'
      .form-group
        = f.label t("user.fio"), class: 'col-sm-2 control-label', for: 'fio'
        .col-sm-10
          = f.text_field :fio, autocomplete: "off",class: 'form-control', id: 'date', type: 'text' , placeholder: 'Ф.И.О'
      .form-group
        = f.label t('user.birthday'), class: 'col-sm-2 control-label', for: 'date'
        .col-sm-10
          = f.date_field :birhtday, autocomplete: "off",class: 'form-control', id: 'date', type: 'date' , placeholder: 'date'
      .form-group
        = f.label t("user.city"), class: 'col-sm-2 control-label', for: 'search'
        .col-sm-10
          = f.search_field :city, autocomplete: "off",class: 'form-control', id: 'search', type: 'search' , placeholder: ''
      .form-group
        = f.label t("user.email"), class: 'col-sm-2 control-label', for: 'inputEmail'
        .col-sm-10
          = f.email_field :email, autofocus: true,class: 'form-control', type: 'email', id: 'inputEmail'
      .form-group
        = f.label t("user.password"), class: 'col-sm-2 control-label', for: 'inputPassword'
        - if @validatable
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        .col-sm-10
          = f.password_field :password, autocomplete: "off",class: 'form-control', id: 'inputPassword', type: 'password' , placeholder: t("user.password")
      .form-group
        = f.label t("user.password_confirmation"), class: 'col-sm-2 control-label', for: 'inputPassword'
        %br/
        .col-sm-10
          = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', id: 'inputPassword', type: 'password',placeholder: t("user.password_confirmation")
      .form-group
        .reg-btn.col-sm-offset-2.col-sm-10
          = f.submit t("user.registration"), class: 'btn btn-info'
