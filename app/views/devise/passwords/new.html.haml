.password.col-lg-6.col-md-6.col-sm-6.col-xs-12.col-lg-offset-3.col-md-offset-3.col-sm-offset-3
  %h2.text-center=t(".fogot_password?")
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = devise_error_messages!
    .form-group
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, class: 'form-control'
    .form-group
      = f.submit t(".send_me_reset_password_instructions") ,class: "btn btn-info"
