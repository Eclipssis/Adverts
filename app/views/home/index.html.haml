%section.middle.container
  .page-header
    %h1.text-center
      = t('.adverts')
  .row
    - @all_adverts.each do |advert|
      .col-lg-3.col-md-3.col-sm-4.col-xs-12
        .advert
          %img.pull-left{:src => "http://cs617322.vk.me/v617322811/1eed3/6g2xFxD0fdU.jpg"}
          = link_to( advert.title, advert_path(advert), class: 'title')
          %p.description= truncate(advert.text, :length => 110)
  .cleafix.col-lg-8.col-lg-offset-3
    = paginate @all_adverts, html: {class: 'cleafix'}